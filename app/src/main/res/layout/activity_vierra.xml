<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vierra">

    <ImageView
        android:id="@+id/img_photo"
        android:src="@drawable/vierra"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="VIERRATALE [GRAB IT FAST] - PALU (SMA Negeri 1 Palu)"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/img_photo"/>

    <TextView
        android:id="@+id/txt_tgl"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="18 April 2022"
        android:textAlignment="center"
        android:layout_below="@id/txt_name"/>

    <TextView
        android:id="@+id/txt_tersedia"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="Tiket Tersedia Sekarang"
        android:textAlignment="center"
        android:layout_below="@id/txt_tgl"/>

    <TextView
        android:id="@+id/txt_harga"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="IDR 150.000"
        android:textAlignment="center"
        android:layout_below="@id/txt_tersedia"/>

</RelativeLayout>