<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="40dp"
    app:cardCornerRadius="25dp"
    android:background="#efefef"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_cover"
            android:src="@drawable/hivi"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NAMA BAND"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/img_photo"/>


        <TextView
            android:id="@+id/txt_tgl"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="11 November 2022"
            android:textAlignment="textStart"
            android:layout_below="@id/txt_name"/>

        <TextView
            android:id="@+id/txt_tersedia"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="Tiket Tersedia Sekarang"
            android:textAlignment="textStart"
            android:layout_below="@id/txt_tgl"/>

        <TextView
            android:id="@+id/txt_harga"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:text="IDR 100.000"
            android:textAlignment="viewEnd"
            android:layout_below="@id/txt_tgl"/>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>