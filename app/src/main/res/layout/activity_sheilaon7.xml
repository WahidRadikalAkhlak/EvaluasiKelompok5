<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sheilaon7">

    <ImageView
        android:id="@+id/img_photo"
        android:src="@drawable/so7"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="SHEILA ON7 [HARI BERSAMA] - PALU (GBK)"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/img_photo"/>

    <TextView
        android:id="@+id/txt_tgl"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="27 November 2022"
        android:textAlignment="center"
        android:layout_below="@id/txt_name"/>

    <TextView
        android:id="@+id/txt_tersedia"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="Tiket Tersedia Sekarang"
        android:textAlignment="center"
        android:layout_below="@id/txt_tgl"/>

    <TextView
        android:id="@+id/txt_harga"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="IDR 200.000"
        android:textAlignment="center"
        android:layout_below="@id/txt_tersedia"/>

</RelativeLayout>